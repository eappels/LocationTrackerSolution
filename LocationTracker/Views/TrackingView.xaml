<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             x:Class="LocationTracker.Views.TrackingView"
             Title="TrackingView">
    <Grid ColumnDefinitions="1*"
          RowDefinitions="0.1*, 0.8*, 0.1*">
        <Switch IsToggled="{Binding IsTracking}"
                VerticalOptions="Center"
                Margin="10,0,0,0"
                ZIndex="1"
                Grid.Column="0"
                Grid.Row="0" />
        <maps:Map x:Name="map"
                  ZIndex="0"
                  Grid.Row="0"
                  Grid.RowSpan="3"
                  Grid.Column="1" />
        <Button Text="Clear"
                Command="{Binding ClearRouteHistoryCommand}"
                Margin="10"
                ZIndex="1"
                Grid.Row="2"
                Grid.Column="1" />
    </Grid>
</ContentPage>